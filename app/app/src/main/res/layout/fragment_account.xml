<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="#1DA6A6"
            android:padding="10dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@id/idCVUserImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
            >
                <ImageView
                    android:id="@+id/idIVUserImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/company_logo_removebg_preview"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/idTVUserName"
                android:layout_below="@+id/idCVUserImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Name"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/idBtnLogout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_baseline_logout_24">
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@color/main_bg_white_color"
            >

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>